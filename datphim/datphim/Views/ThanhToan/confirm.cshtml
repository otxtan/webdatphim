@model IEnumerable<datphim.Models.Tb_Ve>



@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="d-flex flex-column  align-items-center" style="margin:auto;width: 95%;padding: 50px 0 150px 0px;overflow-x: scroll;">
    <div style=" background-color: #f0f0f0; /* Màu nền */ color: #333; /* Màu chữ */ padding: 10px; width:100%">

        <h3 style="text-align:center">Tiến hành Thanh Toán</h3>
    </div>
    <br />
    <table class="table  " style="width: 50%" ">
        <tr>
            <th>Người dùng</th>
            <td>@ViewBag.HoaDon[0].UserName</td>


        </tr>
        <tr>
            <th>Mã lịch chiếu</th>
            <td>@ViewBag.HoaDon[0].Ma_LichChieu_PhongChieu</td>
        </tr>
        <tr>
            <th>Giá tiền</th>
            <td> @ViewBag.HoaDon[0].GiaTien</td>
        </tr>
        <tr>
            <th>Số lượng</th>
            <td>  @ViewBag.HoaDon[0].SoLuong</td>
        </tr>
        <tr>
            <th>Ngày Tạo</th>
            <td> @ViewBag.HoaDon[0].NgayTao</td>

        </tr>
        <tr>
            <th>Thành tiền</th>
            <td> @ViewBag.HoaDon[0].ThanhTien</td>

        </tr>

    </table>
    <br />
    <div style=" background-color: #f0f0f0; /* Màu nền */ color: #333; /* Màu chữ */ padding: 10px; width:100%">

        <h3 style="text-align:center">Mã Vé</h3>
    </div>
    <br />
    <table class="table" style="width: 90%">
        <tr>
            <th>
                Mã vé
            </th>
            <th>
                Mã hóa đơn
            </th>
            <th>
                Ngày chiếu
            </th>
            <th>
                giờ chiếu
            </th>

            <th>
                Tên ghế
            </th>
            <th>
                Phòng chiếu
            </th>
        </tr>

        @foreach (var item in ViewBag.tb_Ve1)
        {
            <tr>
                <td>
                    @item.Ma_ve
                </td>
                <td>
                    &#35;@item.Ma_HoaDon
                </td>
                <td>
                    @item.Tb_LichChieu_PhongChieu.NgayChieu
                </td>
                <td>
                    @item.Tb_LichChieu_PhongChieu.GioChieu
                </td>
                <td>
                    @item.Tb_PhongGhe.TenGhe
                </td>
                <td>
                    @item.Tb_PhongGhe.Ma_PhongChieu
                </td>

            </tr>
        }

    </table>


    <div style=" background-color: #f0f0f0; /* Màu nền */ color: #333; /* Màu chữ */ padding: 10px; width:100%">

        <h3 style="text-align:center">Thông tin thanh toán</h3>
    </div>
    <br />
    <p>Lưu ý: nội dung chuyển khoản bao gồm mã đơn hàng</p>
    <table class="table" style="width: 80%">
        <tr>
            <th>
                phương thức thanh toán
            </th>
            <th>
                Số tài khoản
            </th>
            <th>
                Tên người nhận
            </th>

        </tr>

        @foreach (var item in ViewBag.tb_ThanhToan)
        {
            <tr>
                <td>
                    @item.TenTiengViet
                </td>
                <td>
                    @item.SoTaiKhoan
                </td>
                <td>
                    @item.TenNguoiNhan
                </td>


            </tr>
        }

    </table>
    <table class="table" style="width: 20%">

        <tr>
            <td>
                @using (Html.BeginForm("successful", "ThanhToan", FormMethod.Post))
                {
                    <input type="hidden" name="username" value="@ViewBag.HoaDon[0].UserName">
                    <input type="hidden" name="mahd" value="@ViewBag.HoaDon[0].Ma_HoaDon">
                    <input type="hidden" name="confirm" value="1">
                    <input type="submit" value="Xác nhận thanh toán" class="btn btn-info" />
                }
            </td>
            <td>
                @using (Html.BeginForm("tranchu", "Home", FormMethod.Post))
                {

                    <input type="submit" value="Hủy" class="btn btn-danger" />
                }
            </td>
        </tr>
    </table>

</div>

