@model IEnumerable<datphim.Models.Tb_Ve>



@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="d-flex flex-column align-items-center " style="margin:auto;width:70%;padding: 50px 0 150px 0px;">

    <div style=" background-color: #f0f0f0; /* Màu nền */ color: #333; /* Màu chữ */ padding: 10px; width:100%">

        <h3 style="text-align:center">@ViewBag.ketqua</h3>
    </div>
    <br />
    <table class="table  " style="width: 50%" ">
        <tr>
            <th>Người dùng</th>
            <td>@ViewBag.HoaDon[0].UserName</td>
        </tr>
        <tr>
            <th>Mã lịch chiếu</th>
            <td>@ViewBag.HoaDon[0].Ma_LichChieu_PhongChieu</td>
        </tr>
        <tr>
            <th>Giá tiền</th>
            <td> @ViewBag.HoaDon[0].GiaTien</td>
        </tr>
        <tr>
            <th>Số lượng</th>
            <td>  @ViewBag.HoaDon[0].SoLuong</td>
        </tr>
        <tr>
            <th>Ngày Tạo</th>
            <td> @ViewBag.HoaDon[0].NgayTao</td>

        </tr>
        <tr>
            <th>Thành tiền</th>
            <td> @ViewBag.HoaDon[0].ThanhTien</td>

        </tr>

    </table>
    <br />

    <div style=" background-color: #f0f0f0; /* Màu nền */ color: #333; /* Màu chữ */ padding: 10px; width:100%">

        <h3 style="text-align:center">Thông tin vé</h3>
    </div>

    <table class="table">
        <tr>
            <th>
                Mã vé
            </th>
            <th>
                Mã hóa đơn
            </th>
            <th>
                Ngày chiếu
            </th>
            <th>
                giờ chiếu
            </th>

            <th>
                Tên ghế
            </th>
            <th>
                Phòng chiếu
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ma_ve)
                </td>
                <td>
                    &#35;@Html.DisplayFor(modelItem => item.Ma_HoaDon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tb_LichChieu_PhongChieu.NgayChieu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tb_LichChieu_PhongChieu.GioChieu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tb_PhongGhe.TenGhe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tb_PhongGhe.Ma_PhongChieu)
                </td>

            </tr>
        }

    </table>
</div>

